{
    "name": "dealroom/socials-helpers",
    "description": "Helper package used for the validation and normalization of social media links",
    "type": "library",
    "license": "MIT",
    "keywords": ["social", "linkedin", "facebook", "twitter"],
    "require": {
        "php": ">=8.2",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "Dealroom\\SocialsHelpers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Dealroom\\SocialsHelpers\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
